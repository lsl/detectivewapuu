{
  "name": "Detective Wapuu",
  "description": "Detect Gutenberg blocks used on the site.",
  "version": "1.0.0",
  "author": "sorta brilliant",
  "homepage_url": "https://github.com/sortabrilliant/detectivewapuu",
  "manifest_version": 2,
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png"
  },
  "permissions": [
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png"
    },
    "chrome_style": false
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
      "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ]
}
